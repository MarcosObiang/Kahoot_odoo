<?xml version="1.0"?>

<odoo>
    <data>
        <record id="survey_question_form_id" model="ir.ui.view">
            <field name="name">survey_question_form_id</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"></field>
            <field name="arch" type="xml">

                <form>
                    <xpath expr="//field[@name='answer_datetime']" position='after'>
                        <field name="answer_true_or_false" string="Correct Answer?"
                            invisible=" question_type != 'true_or_false'" />

                    </xpath>

                </form>

            </field>


        </record>
    </data>

</odoo>